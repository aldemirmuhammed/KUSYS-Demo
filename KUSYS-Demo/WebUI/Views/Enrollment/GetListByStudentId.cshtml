@using Models.Concrete.ViewModels.EnrollmentVMs;
@model EnrollmentByStudentIdViewModel

@{
    ViewData["Title"] = "Enrollment List";
}

<br />
<div class="card" style="width:50%">
    <div class="container p-6" style="width:100%">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-info">Enrollment List</h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-info">@Model.Student.FullName</a>
            </div>
        </div>

        <br />

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th style="width:20%">Course</th>
                    <th style="width:20%">CourseId</th>
                    <th style="width:20%">StudentId</th>
                </tr>
            </thead>

            @foreach (var grade in Model.EnrollmentList)
            {
                <tr>
                    <td>
                        @Model.CourseList.FirstOrDefault(c => c.Id == grade.CourseId)?.FullName
                    </td>
                  
                    <td>@grade.CourseId</td>
                    <td>@grade.StudentId</td>
                </tr>
            }
        </table>
        <div class="col-12 mb-2 mt-4">
            <a asp-controller="Student" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </div> 
</div>